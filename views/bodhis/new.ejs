<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">create a new bodhi</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/bodhis" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="name" placeholder="title"> 
                </div>
                <div class="form-group">
                   <input class="form-control" type="number" name="donation" placeholder="suggested BTC donation" min="0.0001" step="0.0001"> 
                </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="BTC address" placeholder="BTC address"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/bodhis">go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
