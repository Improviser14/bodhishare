<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Bodhishare</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
           </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
               <img class="img-responsive" src="<%= bodhi.image %>">
               <div class="caption-full">
                   <h4 class="pull-right">ETH 0.0005</h4>
                   <h4><a><%=bodhi.name%></a></h4>
                   <p><%= bodhi.description %></p>
                   <p>
                      <em>Submitted By <%= bodhi.author.username %></em>
                   </p>
                   <% if(currentUser && bodhi.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/bodhis/<%= bodhi._id %>/edit">Edit</a>
                        <form class="delete-form" action="/bodis/<%= bodhi._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
               </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/bodhis/<%= bodhi._id %>/comments/new">add a new comment</a>
                </div>
                <hr>
                <% bodhi.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author.username %></strong>
                           <span class="pull-right">Chi 0.0005</span>
                            <p>
                                 <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/bodhis/<%=bodhi._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/bodhis/<%=bodhi._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
               <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %> 