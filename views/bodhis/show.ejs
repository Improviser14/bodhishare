<% include ../partials/header %>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p class="lead"><%=bodhi.name%></p>
            <div class="list-group">
                <li class="list-group-item active">author's BTC address:</li>
                <li class="list-group-item"><em><%= bodhi.BTCaddress %></em></li>
                <li class="list-group-item">Copy the above hash address, paste it into your crypto wallet's send address field and donate to this author directly and securely. Bodhishare does not take a cut of your donation. Take your time and be safe, this is new technology, and welcome to internet 3.0!</li>
                <!--<li class="list-group-item"><em><%= bodhi.BTCQR %></em></li> -->
           </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
               <img class="img-responsive" src="<%= bodhi.image %>">
               
               <div class="caption-full">
                   <h4>suggested donation <%= bodhi.donation %>/BTC<h4> 
                   <hr>
                   <h5><a><%=bodhi.name%></a></h5>
                   <p><%= bodhi.description %></p>
                   <p>
                      <em>submitted by <%= bodhi.author.username %></em>
                   </p>
                   <% if(currentUser && bodhi.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/bodhis/<%= bodhi._id %>/edit">Edit</a>
                        <form class="delete-form" action="/bodis/<%= bodhi._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
               </div>
            </div>
            
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/bodhis/<%= bodhi._id %>/comments/new">add a new comment</a>
                </div>
                <hr>
                <% bodhi.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author.username %></strong>
                           <span class="pull-right">chi 1</span>
                            <p>
                                 <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/bodhis/<%=bodhi._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/bodhis/<%=bodhi._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
               <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %> 