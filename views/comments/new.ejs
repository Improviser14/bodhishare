<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">add a new comment to <%= bodhi.name %></h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/bodhis/<%= bodhi._id %>/comments" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="comment[text]" placeholder="content"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/bodhis">go back</a>
        </div>
   </div>
</div>

