<% include ../partials/header %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
      <h1 class="text-center">contact the bodhishare devs</h1>
      <form action="/contact/send" method="post" id="form">
        <div class="messages"> </div>
        <div class="controls">
          <div class="form-group">
            <label class="" for="form_name">name</label>
            <input type="text" class="form-control" id="form_name" name="name" placeholder="your name" required="required" data-error="Your Name is Required">
            <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
            <label class="" for="form_phone">phone</label>
            <input type="tel" class="form-control" id="form_phone" name="phone" placeholder="your phone number" required="required" data-error="Your Phone Number is Required">
            <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
            <label class="" for="form_email">email</label>
            <input type="email" class="form-control" id="form_email" name="email" placeholder="your email address" required="required" data-error="Your Email is Required">
            <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
            <label class="" for="form_message">message</label>
            <textarea class="form-control" id="form_message" name="message" placeholder="your message" rows="4" required="required" data-error="Please, leave us a message."></textarea>
            <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
            <!-- Insert the code for the reCaptcha check box -->
            <div class="g-recaptcha" data-sitekey=<%= process.env.NEW_RECAPTCHA_API_SECRET %> ></div>
                                                   
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">send email</button>
          </div>
      </form>
      <a href="/bodhis">Go Back</a>
      </div>
    </div>
  </div>

<% include ../partials/footer %>
